{
  "name": "royal-hime",
  "version": "0.0.1",
  "description": "An Experimental HTML5 Game",
  "devDependencies": {
    "http-server": "0.6.1",
    "bower": "^1.3.8",

    "karma": "0.12.16",
    "karma-cli": "0.0.4",
    "karma-jasmine": "^0.1.5",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-chrome-launcher": "^0.1.4",
    "karma-firefox-launcher": "^0.1.3",
    "karma-failed-reporter": "0.0.2",
    "karma-coverage": "0.2.4",

    "mocha": "1.21.4",
    "chai": "1.9.1",

    "istanbul": "0.3.0",

    "browserify": "5.9.3"
  },
  "scripts": {
    "postinstall": "bower install --config.interactive=false",

    "start": "http-server -p 8000 app",

    "pretest": "npm install",
    "test": "karma start test/karma.conf.js",
    "test-watch": "karma start test/karma.conf.js --no-single-run",
    "test-mocha": "export NODE_PATH=bower_components/lodash/dist:src; mocha",

    "coverage": "export NODE_PATH=bower_components/lodash/dist:src; istanbul cover -x \"**/lodash.js\" node_modules/.bin/_mocha",

    "build": "export NODE_PATH=bower_components/lodash/dist:src; browserify src/main.js -o app/scripts/hime.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Prince86EKNJ/royal-hime"
  },
  "author": "Edward Nicholes Jr.",
  "bugs": {
    "url": "https://github.com/Prince86EKNJ/royal-hime/issues"
  },
  "homepage": "https://github.com/Prince86EKNJ/royal-hime"
}
